<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_parent_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/darker_gray"
    tools:context=".MainActivity">


    <RelativeLayout
        android:id="@+id/header_layout"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@android:color/holo_blue_bright"
        android:layout_alignParentTop="true">

        <Button
            android:id="@+id/btn_button1"
            android:layout_width="60dp"
            android:layout_height="60dp"

            android:layout_margin="10dp"
            android:textColor="@android:color/black"
            android:background="@drawable/btn_rounded_color_rect"
            android:layout_alignParentLeft="true"
            />
        <TextView
            android:id="@+id/tv_summer_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2018SummerEx"
            android:layout_centerInParent="true"
            android:textSize="20sp"
            android:textColor="@android:color/black"/>
        <ImageButton
            android:id="@+id/btn_button2"
            android:src="@drawable/btn_image_avatar_pressed"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:text="Button2"
            android:layout_margin="10dp"
            android:textColor="@android:color/white"
            android:background="@android:color/transparent"
            android:layout_alignParentRight="true"/>

    </RelativeLayout>


    <TextView
        android:layout_below="@+id/header_layout"
        android:id="@+id/tv_prompt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="This Fragment is used for the quiz"
        android:textSize="20sp"
        android:textColor="@android:color/white"
        android:textAlignment="center"
        android:padding="20dp"
        android:background="@android:color/holo_blue_dark"
        />



    <LinearLayout

        android:id="@+id/btn_all_buttons"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@android:color/black"
        android:layout_below="@+id/tv_prompt"
        android:orientation="horizontal"
        android:padding="0dp">

        <Button
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:padding="0dp"
            android:text="Quiz 1"

            />

        <Button
            android:id="@+id/btn_quiz_2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:padding="0dp"
            android:text="Quiz 2" />
        <Button
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:padding="0dp"
            android:text="Quiz 3"
            />

    </LinearLayout>

    <Button
        android:id="@+id/btn_submit"

        android:layout_below="@+id/btn_all_buttons"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@drawable/rounded_corners"
        android:layout_marginTop="8dp"
        android:text="SUBMIT"
        android:textColor="@android:color/white"
        android:textSize="10pt"/>


    <TextView
        android:layout_above="@+id/btn_custom_menu_bar"

        android:id="@+id/tv_second_prompt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="This Fragment is used for the quiz"
        android:textSize="20sp"
        android:textColor="@android:color/white"
        android:textAlignment="center"
        android:padding="20dp"
        android:background="@android:color/holo_blue_light"
        />




    <LinearLayout
        android:id="@+id/btn_custom_menu_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:background="@android:color/holo_green_light">
        <Button
            android:id="@+id/btn_demo"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@android:color/transparent"
            android:text="Demo"
            android:layout_weight="1"/>
        <Button
            android:id="@+id/btn_work"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@android:color/transparent"
            android:layout_weight="1"
            android:text="Work"/>
    </LinearLayout>





</RelativeLayout>